public class Livros {
		String nome;
		String descricao;
		double valor;
		String isbn;
		
		void mostrarDetalhes() {
			String mensagem = "Mostrar detalhes do Livro";
			System.out.println("Nome: " + nome);
			System.out.println("Descricao: " + descricao);
			System.out.println("Valor: " + valor);
			System.out.println("ISBN: " + isbn);
			System.out.println("--");


			
		}

	}
